rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             request.auth.token.email == 'adminannektech@gmail.com';
    }

    // Media upload rules
    match /uploads/{allPaths=**} {
      allow read: if true;  // Anyone can view uploaded files
      allow write: if isAdmin();  // Only admin can upload/delete files
    }
  }
} 